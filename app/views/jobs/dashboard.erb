<div class="container">
    <h1>Dashboard</h1>
      <% @jobs.each do |job| %>
        <p>Title: <a href="/jobs/<%= job.slug %>"><%= job.title %></a></p>
        <p>Company: <%= job.company %></p>
        <p>Location: <%= job.location %></p>
        <% if job.applied == true%>
          <p>Application Status: Applied</p>
        <% else %>
          <p>Application Status: Not Applied</p>
        <% end %>
        <p>Notes: <%= job.note %></p>
        <form method="POST" action="/jobs/<%=job.slug%>/delete">
          <input type="submit" value="delete" class="btn btn-warning">
          <input id="hidden" type="hidden" name="_method" value="delete">
        </form>
        <hr><br>
      <% end %>
</div>